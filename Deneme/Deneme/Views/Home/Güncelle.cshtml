
@model Deneme.Models.Ogrenci

<h1>Güncelle</h1>

<form asp-action="Güncelle" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>İsim</label>
            <input class="form-control" type="text" name="Ad" placeholder="@Model.Ad" />
        </div>

        <div class="form-group col-md-6">
            <label>Soyisim</label>
            <input class="form-control" type="text" name="Soyad" placeholder="@Model.Soyad" />
        </div>

        <div class="form-group col-md-4">
            <label>Bölüm</label>
            @Html.DropDownListFor(m => m.Bolum.Id, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <button class="btn btn-success" > Güncelle </button>
</form>