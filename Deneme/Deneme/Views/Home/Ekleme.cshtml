@model Deneme.Models.Ogrenci

<form asp-action="Ekleme" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>İsim</label>
            <input class="form-control" type="text" name="Ad" />
        </div>

        <div class="form-group col-md-6">
            <label>Soyisim</label>
            <input class="form-control" type="text" name="Soyad" />
        </div>

        <div class="form-group col-md-4">
            <label>Bölüm</label>
            @Html.DropDownListFor(m => m.Bolum.Id, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <button class="btn btn-success"> Ekle </button>
</form>